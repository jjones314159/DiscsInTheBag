<%- include("../partials/header") %>

<div class="container">

		<h1 style="text-align: center; padding-top: 50px">
			Edit <%=disc.mold%>
		</h1>
		<div style="width:30%; margin: 30px auto;">
			<form action="/discs/<%=disc.mold%>?_method=PUT" method="POST">
				<div class="form-group">
					Mold <input class="form-control" type="text" value="<%=disc.mold%>" name="disc[mold]">
				</div>
				<div class="form-group">
					Brand <input class="form-control" type="text" value="<%=disc.brand%>" name="disc[brand]">
				</div>
				<div class="form-group">
					Image URL <input class="form-control" type="text" value="<%=disc.image%>" name="disc[image]">
				</div>
				<div class="form-group">
					Category <input class="form-control" type="text" value="<%=disc.category%>" name="disc[category]">
				</div>				
				<div class="form-group">
					Speed <input class="form-control" type="number" value="<%=disc.speed%>" name="disc[speed]">
				</div>					
				<div class="form-group">
					Glide <input class="form-control" type="number" value="<%=disc.glide%>" name="disc[glide]">
				</div>					
				<div class="form-group">
					Turn <input class="form-control" type="number" value="<%=disc.turn%>" name="disc[turn]" step="0.5">
				</div>					
				<div class="form-group">
					Fade <input class="form-control" type="number" value="<%=disc.fade%>" name="disc[fade]" step="0.5">
				</div>				
				<div class="form-group">
					Popularity Score <input class="form-control" type="number" value="<%=disc.popularity_score%>" name="disc[popularity_score]">
				</div>				
				<div class="form-group">
					Buy URL <input class="form-control" type="text" value="<%=disc.buy_url%>" name="disc[buy_url]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Save
					</button>
				</div>
			</form>
		</div>

</div>

<%- include("../partials/footer") %>
