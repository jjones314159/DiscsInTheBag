<%- include("../partials/header") %>

<div class="container">

		<h1 style="text-align: center; padding-top: 50px">
			Add new pro
		</h1>
		<div style="width:30%; margin: 30px auto;">
			<form action="/pros" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name">
				</div>				
				<div class="form-group">
					<input class="form-control" type="text" placeholder="url name - no spaces" name="url_name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image">
				</div>				
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image credit" name="image_credit">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="rank" name="rank">
				</div>				
				<div class="form-group">
					<input class="form-control" type="text" placeholder="gender m/f" name="gender">
				</div>	
				<div class="form-group">
					<input class="form-control" type="text" placeholder="sponsor" name="sponsor">
				</div>	
				<div class="form-group">
					<input class="form-control" type="text" placeholder="last bag update - e.g. March 2020" name="last_bag_update">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
					Create
					</button>
				</div>
			</form>
		</div>

</div>

<%- include("../partials/footer") %>
